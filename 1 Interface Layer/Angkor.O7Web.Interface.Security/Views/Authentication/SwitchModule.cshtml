@model Angkor.O7Web.Interface.Security.Model.SwitchModuleViewModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>O7ERP | Modulos</title>
    @Html.StyleLink("css/bootstrap.min.css")
    @Html.StyleLink("font-awesome/css/font-awesome.css")
    @Html.StyleLink("css/plugins/chosen/bootstrap-chosen.css")
    @Html.StyleLink("css/animate.css")
    @Html.StyleLink("css/style.css")
</head>
<body>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @if (Model.IsCorrect) {
            foreach (var module in Model.Modules) {
                <div class="col-lg-3">
                    <div class="contact-box center-version">
                        <a href="#">
                            <i class="fa fa-line-chart fa-5x"></i>
                            <h3 class="m-b-xs">
                                <strong>@module.Title</strong>
                            </h3>
                            <div class="font-bold">@module.Version</div>
                        </a>
                        <div class="contact-box-footer">
                            <div class="m-t-xs btn-group">
                                <a class="btn btn-xs btn-white"><i class="fa fa-search"></i> Detalle</a>
                                <a href="@module.Url" class="btn btn-xs btn-white"><i class="fa fa-sign-in"></i> Ingresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }else {
            @Html.Partial(LinkHelper.PartialLink("view/ErrorPage.cshtml"), Model)
        }
    </div>
</div>
</body>
</html>