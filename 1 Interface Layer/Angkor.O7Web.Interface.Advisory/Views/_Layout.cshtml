@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Angkor Group | O7Advisory</title>
    @Html.StyleLink("css/bootstrap.min.css")
    <script src="https://use.fontawesome.com/b6f7189985.js"></script>
    @Html.StyleLink("css/plugins/toastr/toastr.min.css")
    @Html.StyleLink("css/animate.css")
    @Html.StyleLink("css/style.css")
    @RenderSection("styles", required: false)
</head>

<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu" style="margin-top: -6px;">
                    <li class="nav-header" style="padding-bottom: 16px ! important; padding-top: 16px ! important;">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">Federico Montero</strong>
                                    </span> <span class="text-muted text-xs block">CEO ANGKOR</span>
                                </span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <a>
                            <i class="fa fa-cog"></i>
                            <span class="nav-label">Ajustes del sistema</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li><a href="#">Periodo</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1" style="min-height: 322px;">
            <div class="row border-bottom" style="margin-right: -20px; height: 45px !important;">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-top: -6px !important">
                    <ul class="nav navbar-top-links navbar-right">
                        <li onmouseover="this.style.backgroundColor='#fff'" onmouseout="this.style.backgroundColor=''" style="word-spacing: 8px; margin-right: 30px !important; margin-bottom: -15px !important; margin-right: 30px !important; margin-top: 16px; height: 25px !important;">
                            <a class="right-sidebar-toggle" style="padding-top: 11px; margin-top: -8px !important; margin-right: -5px !important;">
                                Inicio
                                <i class="fa fa-windows"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="row  border-bottom white-bg dashboard-header" style="margin: -15px; margin-top: 0px !important;">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id="right-sidebar" class="animated" style="margin-top: -16px">
        <div class="sidebar-container">
            <ul class="nav nav-tabs navs-2">
                <li class="active"><a data-toggle="tab" href="#tab-1">Sesión</a></li>
                <li><a data-toggle="tab" href="#tab-2">Modulos</a></li>
            </ul>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="sidebar-title">
                        <h3>
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square-o fa-stack-2x"></i>
                                <i class="fa fa-user fa-stack-1x"></i>
                            </span>
                            Sesión
                        </h3>
                    </div>
                    <div class="setings-item">
                        <span>Datos de sesión</span>
                    </div>
                    <div class="setings-item">
                        <span>Cambiar contraseña</span>
                    </div>
                    <div class="setings-item">
                        <span>Cerrar sesión</span>
                    </div>
                </div>
                <div id="tab-2" class="tab-pane">
                    <div class="sidebar-title">
                        <h3>
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square-o fa-stack-2x"></i>
                                <i class="fa fa-puzzle-piece fa-stack-1x"></i>
                            </span>
                            Elección de modulos
                        </h3>
                    </div>
                    <div class="setings-item">
                        <span>Financiero</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.JavaScriptLink("js/jquery-2.1.1.js")
    @Html.JavaScriptLink("js/bootstrap.min.js")
    @Html.JavaScriptLink("js/plugins/metisMenu/jquery.metisMenu.js")
    @Html.JavaScriptLink("js/plugins/slimscroll/jquery.slimscroll.min.js")
    @Html.JavaScriptLink("js/inspinia.js")
    @Html.JavaScriptLink("js/plugins/pace/pace.min.js")
    @Html.JavaScriptLink("js/plugins/jquery-ui/jquery-ui.min.js")
    @Html.JavaScriptLink("js/plugins/toastr/toastr.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>